@import '_smart-grid'

main-color = #fa6900
second-color = #69d2e7

body
	font-family 'Open Sans', sans-serif
	margin 0
	overflow-x hidden


.top-menu
	display flex
	flex-direction row
	justify-content space-between

.top-menu-list
	ul
		list-style none

.header
	wrapper()
	max-width none
	background second-color
	height 50vh
	min-height 260px

.hello-block,
.hello-text-container
	row-flex()
	color #fff
	align-items center
	text-align center


.hello-block
	height 80.5%
	justify-content center

.hello-title,
.hello-descr,
.top-menu,
.hello-block
	col-12()

.hello-title
	font-size 4em

.hello-descr
	font-size 2em

.hello-title,
.hello-descr
	margin 0
	text-transform uppercase